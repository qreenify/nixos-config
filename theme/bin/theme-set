#!/usr/bin/env bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: theme-theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/theme/themes/"
CURRENT_THEME_DIR="$HOME/.config/theme/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
theme-theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  theme-restart-waybar
fi
theme-restart-swayosd
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, browser, vscode, cursor themes
theme-theme-set-terminal
theme-theme-set-gnome
theme-theme-set-browser
theme-theme-set-vscode
theme-theme-set-cursor
theme-theme-set-obsidian

# Call hook on theme set
theme-hook theme-set "$THEME_NAME"
