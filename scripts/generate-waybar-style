#!/usr/bin/env bash
# Generate complete waybar CSS from theme colors

THEME_CSS="$HOME/.config/theme/current/theme/waybar.css"
OUTPUT="$HOME/.config/waybar/style.css"

if [[ ! -f "$THEME_CSS" ]]; then
  echo "Error: Theme waybar.css not found"
  exit 1
fi

# Import theme colors
cat "$THEME_CSS" > "$OUTPUT"

# Append static CSS rules that use the theme colors
cat >> "$OUTPUT" << 'EOF'

* {
    font-family: "JetBrainsMono Nerd Font";
    font-size: 13px;
    border: none;
    border-radius: 0;
    min-height: 0;
}

window#waybar {
    background-color: @background;
    color: @foreground;
}

#workspaces {
    background-color: transparent;
}

#workspaces button {
    color: @foreground;
    background-color: transparent;
    padding: 0 8px;
    border-radius: 0;
    transition: all 0.3s;
}

#workspaces button.active {
    color: @foreground;
    font-weight: bold;
}

#clock, #tray, #mpris {
    background-color: transparent;
    color: @foreground;
    padding: 0 10px;
}

#mpris {
    font-style: italic;
    transition: none;  /* Disable transitions to prevent lag on song change */
}

#tray {
    padding: 0 8px;
    margin-right: 5px;
    border-radius: 4px;
    background-color: transparent;
    transition: background-color 0.3s ease;
}

#tray:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

#tray > * {
    opacity: 1;
    min-width: 18px;
}

/* App Volume Indicators */
#custom-app-volumes {
    padding: 0 3px;
    margin-right: 0;
    font-size: 12px;  /* Small percentage text */
    color: @foreground;
    opacity: 0;  /* Default: completely invisible */
    transition: opacity 0.75s ease-out;  /* Faster fade */
}

/* Changing state - fully visible with instant fade-in */
#custom-app-volumes.changing {
    opacity: 1;
    transition: opacity 0.1s ease-in;
}

/* Hover state - fully visible */
#custom-app-volumes:hover {
    opacity: 1;
    transition: opacity 0.3s ease-in;
}
EOF

echo "Generated waybar style with theme colors"
