#!/usr/bin/env bash
# Generate complete waybar CSS from theme colors

THEME_CSS="$HOME/.config/omarchy/current/theme/waybar.css"
OUTPUT="$HOME/.config/waybar/style.css"

if [[ ! -f "$THEME_CSS" ]]; then
  echo "Error: Theme waybar.css not found"
  exit 1
fi

# Import theme colors
cat "$THEME_CSS" > "$OUTPUT"

# Append static CSS rules that use the theme colors
cat >> "$OUTPUT" << 'EOF'

* {
    font-family: "JetBrainsMono Nerd Font";
    font-size: 13px;
    border: none;
    border-radius: 0;
    min-height: 0;
    transition: all 0.5s;
}

window#waybar {
    background-color: @background;
    color: @foreground;
}

#workspaces {
    background-color: transparent;
}

#workspaces button {
    color: @foreground;
    background-color: transparent;
    padding: 0 8px;
    border-radius: 0;
}

#workspaces button.active {
    color: @foreground;
    font-weight: bold;
}

#clock, #tray, #mpris {
    background-color: transparent;
    color: @foreground;
    padding: 0 10px;
}

#mpris {
    font-style: italic;
}

#tray:not(:hover) > * {
    opacity: 0;
    min-width: 0;
}

#tray:hover > * {
    opacity: 1;
    min-width: 18px;
}
EOF

echo "Generated waybar style with theme colors"
