#!/usr/bin/env bash
# Fast Twitch volume control using wpctl with cache

ACTION="$1"
CACHE_FILE="/tmp/app-volume-cache-$USER/twitch"

# Read stream IDs from cache
SINK_INPUTS=()
if [[ -f "$CACHE_FILE" ]]; then
    while IFS= read -r stream_id; do
        [[ -n "$stream_id" ]] && SINK_INPUTS+=("$stream_id")
    done < "$CACHE_FILE"
fi

[[ ${#SINK_INPUTS[@]} -eq 0 ]] && exit 1

# Direct wpctl calls - optimized for speed
case "$ACTION" in
    up)
        for id in "${SINK_INPUTS[@]}"; do
            wpctl set-volume -l 1.0 "$id" 5%+
        done
        ;;
    down)
        for id in "${SINK_INPUTS[@]}"; do
            wpctl set-volume "$id" 5%-
        done
        ;;
    mute)
        for id in "${SINK_INPUTS[@]}"; do
            wpctl set-mute "$id" toggle
        done
        ;;
    *)
        exit 1
        ;;
esac

pkill -RTMIN+8 waybar 2>/dev/null
